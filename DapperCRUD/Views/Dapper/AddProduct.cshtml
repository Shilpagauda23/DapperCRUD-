@model Product
<form method="post">
    <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" asp-for="Name" class="form-control"  placeholder="Enter product name">
       
    </div>

    <div class="form-group">
        <label class="category">Product Category</label>
        <select asp-for="Category">
            <option>--Option--</option>
            <option>Electronics</option>
            <option>Foods</option>
            <option>Cloths</option>
        </select>
    </div>

    <div class="form-group">
        <label for="price">Product Price</label>
        <input type="text" asp-for="Price" class="form-control" placeholder="Enter product price">

    </div>
    
    <button type="submit" class="btn btn-primary" onclick="alert('Product Added Successfully!')">Add Product</button>
</form>
